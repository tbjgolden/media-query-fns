{
  "name": "media-query-fns",
  "description": "Useful functions for working with CSS media queries in JS/TS",
  "version": "2.0.0",
  "license": "MIT",
  "keywords": [
    "media",
    "query",
    "functions",
    "tools",
    "parser",
    "compiler",
    "token",
    "typescript"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "homepage": "https://github.com/tbjgolden/media-query-fns",
  "repository": {
    "type": "git",
    "url": "https://github.com/tbjgolden/media-query-fns.git"
  },
  "author": {
    "name": "Tom Golden",
    "email": "oss@tom.bio",
    "url": "https://tom.bio"
  },
  "engines": {
    "node": ">=16.0.0 || ^14.13.1"
  },
  "scripts": {
    "build": "xnr ./.scripts/build.ts",
    "check-build": "xnr ./.scripts/checkBuild.ts",
    "test": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' npx jest",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "media-query-parser": "3.0.2"
  },
  "devDependencies": {
    "@types/eslint": "^8.37.0",
    "@types/jest": "^29.5.1",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-unicorn": "^47.0.0",
    "jest": "^29.5.0",
    "lint-time": "^0.1.1",
    "msg-time": "^0.1.0",
    "prettier": "3.2.5",
    "pub-time": "^0.1.0",
    "simple-git-hooks": "^2.8.1",
    "terser": "^5.17.7",
    "typescript": ">=5.0.4",
    "xnr": "^1.1.3"
  },
  "files": [
    "dist"
  ],
  "simple-git-hooks": {
    "commit-msg": "npx msg-time",
    "pre-commit": "npx lint-time",
    "pre-push": "npx jest -o --coverage=false --passWithNoTests"
  },
  "prettier": {
    "printWidth": 100,
    "proseWrap": "always"
  },
  "lint-time": [
    [
      "*.ts",
      "npx eslint -c .eslintrc.cjs --cache --fix --max-warnings=0"
    ],
    [
      "*.{ts,js,cjs,mjs,json}",
      "npx prettier --ignore-path .gitignore --write"
    ]
  ],
  "jest": {
    "clearMocks": true,
    "collectCoverageFrom": [
      "lib/**/*.ts",
      "!**/test-helpers.ts",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageReporters": [
      "json-summary",
      "text"
    ],
    "errorOnDeprecated": true,
    "extensionsToTreatAsEsm": [
      ".ts",
      ".mts"
    ],
    "resolver": "<rootDir>/.scripts/jestResolver.cjs",
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/lib/**/*.test.[tj]s"
    ],
    "transform": {
      "\\.ts$": "<rootDir>/node_modules/xnr/jest.js"
    }
  }
}
